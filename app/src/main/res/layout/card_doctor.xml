<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/background"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:background="@drawable/bg_specialist"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="170dp"
                app:cardCornerRadius="40dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:id="@+id/photoDoctorImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/doctor_1"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/txtNameDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Galih Pratama"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtNameSpecialist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neurologist"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>

